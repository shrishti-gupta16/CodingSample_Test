<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--Components-->
    <style name="Widget.Boilerplate.BottomSheet.Modal" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="shapeAppearanceOverlay">?shapeAppearanceLargeComponent</item>
    </style>

    <!--Navigation Drawer-->
    <style name="Widget.Boilerplate.NavigationView" parent="Widget.MaterialComponents.NavigationView">
        <item name="itemTextAppearance">?textAppearanceBody2</item>
    </style>

    <style name="BottomPickerDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowAnimationStyle">@style/BottomPickerDialogAnim</item>
    </style>

    <style name="BottomPickerDialogAnim">
        <item name="android:windowEnterAnimation">@anim/slide_up_faster</item>
        <item name="android:windowExitAnimation">@anim/slide_down_faster</item>
    </style>


    <style name="customMaterialTextInputLayout" parent="Base.Widget.MaterialComponents.TextInputLayout">
        <item name="materialThemeOverlay">
            @style/ThemeOverlay.MaterialComponents.TextInputEditText.OutlinedBox
        </item>
        <item name="boxCollapsedPaddingTop">0dp</item>
        <!-- The color of the label when it is collapsed and the text field is active -->
        <item name="hintTextColor">@android:color/black</item>
        <item name="boxStrokeColor">@color/color_primary</item>
        <!-- The color of the label in all other text field states (such as resting and disabled) -->
    </style>
</resources>
